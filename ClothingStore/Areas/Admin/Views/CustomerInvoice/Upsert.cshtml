@model Models.ViewModels.CustomerInvoiceVM

<h2 class="text-black py-2"> انشاء فاتورة العميل</h2>

<hr />
<div class="row">
	<div class="col-md-4">
		<form method="post" enctype="multipart/form-data">
			<input asp-for="CustomerInvoice.Id" hidden />
			<div class="form-group">
				<label asp-for="CustomerInvoice.invoiceNumber" class="control-label"></label>
				<input asp-for="CustomerInvoice.invoiceNumber" class="form-control" required disabled/>
				<span asp-validation-for="CustomerInvoice.invoiceNumber" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="CustomerInvoice.Date" class="control-label"></label>
				<input asp-for="CustomerInvoice.Date" class="form-control" required />
				<span asp-validation-for="CustomerInvoice.Date" class="text-danger"></span>
			</div>
			<div class="form-group" style="margin-bottom: 10px;">
				<label asp-for="CustomerInvoice.CustomerId" class="ms-2"></label>
				<select asp-for="@Model.CustomerInvoice.CustomerId" asp-items="@Model.CustomerList" class="form-select border-0 shadow">
					<option disabled selected>--Select Category--</option>
				</select>
				<span asp-validation-for="CustomerInvoice.CustomerId" class="text-danger"></span>
			</div>
			<div class="form-group">
				<button type="submit" class="btn btn-primary form-control">Create</button>
			</div>
		</form>
	</div>
</div>
