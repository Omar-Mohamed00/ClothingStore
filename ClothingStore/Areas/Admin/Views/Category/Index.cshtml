@model IEnumerable<Category>
<br />

<a asp-controller="Category" asp-action="Upsert" class="btn btn-primary">
    <i class="bi bi-plus-circle-dotted"></i> انشاء فئة
</a>
<div style="padding-bottom: 18px;"></div>
<table id="categoryTable" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="align-middle">
                    <div class="d-flex justify-content-end">
                        <a class="btn btn-info rounded rounded-3 me-2" asp-action="Upsert" asp-route-id="@item.Id">
                            <i class="bi bi-pencil-fill"></i>تعديل
                        </a>
                        <a href="javascript:;" class="btn btn-danger rounded rounded-3 js-delete" data-id="@item.Id">
                            <i class="bi bi-trash3"></i>مسح
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script src="~/js/Category.js" asp-append-version="true"></script>

}